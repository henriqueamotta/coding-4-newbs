<div class="login-container">
  <h1 class="text-neon text-center mb-4">LOGIN <i class="fa fa-sign-in-alt"></i></h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "custom-input" },
                  label_html: { class: "custom-label" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "custom-input" },
                  label_html: { class: "custom-label" } %>
    </div>

    <div class="form-actions mt-3">
      <%= f.button :submit, "LOGIN", class: "btn btn-submit w-100" %>
    </div>
  <% end %>

  <hr class="border-secondary my-4" style="opacity: 0.3;">

  <%= render "devise/shared/links" %>

</div>
